# LeanVibe Agent Hive 2.0 - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://hive_user:hive_pass@localhost:5433/leanvibe_hive
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6381
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=9001
API_WORKERS=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["*"]

# =============================================================================
# CLI TOOL CONFIGURATION
# =============================================================================
PREFERRED_CLI_TOOL=opencode
CLI_TOOL_TIMEOUT=300

# =============================================================================
# API KEYS (Optional - for fallback)
# =============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_PROVIDER=sentence_transformers
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
MAX_CONCURRENT_AGENTS=50
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TASK_TIMEOUT=300
MAX_WORKERS=10

# =============================================================================
# TASK QUEUE CONFIGURATION
# =============================================================================
TASK_QUEUE_PREFIX=hive:queue
TASK_RETRY_DELAY_BASE=2
TASK_MAX_RETRIES=3
TASK_CLEANUP_INTERVAL=300

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
MESSAGE_RETENTION_HOURS=168
MESSAGE_HISTORY_LIMIT=1000
MESSAGE_BATCH_SIZE=100

# =============================================================================
# CONTEXT ENGINE CONFIGURATION
# =============================================================================
CONTEXT_COMPRESSION_THRESHOLD=5
CONTEXT_IMPORTANCE_DECAY_DAYS=30
CONTEXT_MAX_STORAGE_MB=1000

# =============================================================================
# SELF-IMPROVEMENT CONFIGURATION
# =============================================================================
SELF_IMPROVEMENT_ENABLED=true
ENABLE_SELF_MODIFICATION=true
IMPROVEMENT_PROPOSAL_THRESHOLD=0.1
CODE_REVIEW_REQUIRED=true
AUTO_DEPLOY_ENABLED=false

# =============================================================================
# SLEEP-WAKE CONFIGURATION
# =============================================================================
SLEEP_ENABLED=true
SLEEP_START_HOUR=2
SLEEP_END_HOUR=4
SLEEP_TIMEZONE=UTC

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================
PROJECT_ROOT=/app
WORKSPACE_DIR=workspace
LOGS_DIR=logs
TEMP_DIR=tmp

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
GIT_ENABLED=true
GIT_AUTO_COMMIT=true
GIT_BRANCH_PREFIX=agent/

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEVELOPMENT_MODE=false
RELOAD_ON_CHANGE=false
ENABLE_DEBUG_ENDPOINTS=false