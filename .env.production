# LeanVibe Agent Hive 2.0 - Production Environment Configuration

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://hive_user:${POSTGRES_PASSWORD}@postgres:5432/leanvibe_hive
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=15
CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# =============================================================================
# CLI TOOL CONFIGURATION
# =============================================================================
PREFERRED_CLI_TOOL=opencode
CLI_TOOL_TIMEOUT=600

# =============================================================================
# API KEYS
# =============================================================================
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
GOOGLE_AI_API_KEY=${GOOGLE_AI_API_KEY}

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_PROVIDER=openai
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
MAX_CONCURRENT_AGENTS=100
AGENT_HEARTBEAT_INTERVAL=15
AGENT_TASK_TIMEOUT=600
MAX_WORKERS=20

# =============================================================================
# TASK QUEUE CONFIGURATION
# =============================================================================
TASK_QUEUE_PREFIX=hive:queue
TASK_RETRY_DELAY_BASE=5
TASK_MAX_RETRIES=5
TASK_CLEANUP_INTERVAL=180

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
MESSAGE_RETENTION_HOURS=720
MESSAGE_HISTORY_LIMIT=10000
MESSAGE_BATCH_SIZE=500

# =============================================================================
# CONTEXT ENGINE CONFIGURATION
# =============================================================================
CONTEXT_COMPRESSION_THRESHOLD=10
CONTEXT_IMPORTANCE_DECAY_DAYS=60
CONTEXT_MAX_STORAGE_MB=5000

# =============================================================================
# SELF-IMPROVEMENT CONFIGURATION
# =============================================================================
SELF_IMPROVEMENT_ENABLED=true
ENABLE_SELF_MODIFICATION=false
IMPROVEMENT_PROPOSAL_THRESHOLD=0.05
CODE_REVIEW_REQUIRED=true
AUTO_DEPLOY_ENABLED=false

# =============================================================================
# SLEEP-WAKE CONFIGURATION
# =============================================================================
SLEEP_ENABLED=true
SLEEP_START_HOUR=2
SLEEP_END_HOUR=4
SLEEP_TIMEZONE=UTC

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================
PROJECT_ROOT=/app
WORKSPACE_DIR=/app/workspace
LOGS_DIR=/app/logs
TEMP_DIR=/app/tmp

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
GIT_ENABLED=true
GIT_AUTO_COMMIT=false
GIT_BRANCH_PREFIX=agent/

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEVELOPMENT_MODE=false
RELOAD_ON_CHANGE=false
ENABLE_DEBUG_ENDPOINTS=false