# Example environment variables for LeanVibe Agent Hive 2.0
# Copy this file to .env and update with your actual values

# CLI Agentic Coding Tools Configuration
# System will auto-detect available tools and use in priority order:
# 1. opencode (preferred) - https://opencode.ai
# 2. Claude Code CLI - https://claude.ai/cli  
# 3. Gemini CLI - https://ai.google.dev/gemini-api/docs/cli

# Optional: Force specific CLI tool (opencode, claude, gemini)
PREFERRED_CLI_TOOL=

# Optional: Anthropic API key for Claude (fallback if CLI not available)
ANTHROPIC_API_KEY=

# Optional: OpenAI API key for embeddings (if not using local Ollama)
OPENAI_API_KEY=

# Optional: Google AI API key for Gemini (if using Gemini CLI)
GOOGLE_AI_API_KEY=

# Embedding configuration
EMBEDDING_MODEL=ollama  # ollama, openai, or sentence-transformers
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text  # or all-minilm, mxbai-embed-large

# Database configuration (default for Docker setup)
DATABASE_URL=postgresql://hive_user:hive_pass@localhost:5432/leanvibe_hive
POSTGRES_DB=leanvibe_hive
POSTGRES_USER=hive_user
POSTGRES_PASSWORD=hive_pass

# Redis configuration (default for Docker setup)
REDIS_URL=redis://localhost:6379

# Application settings
LOG_LEVEL=INFO
MAX_WORKERS=10
API_PORT=8000

# Agent configuration
MAX_CONCURRENT_AGENTS=50
AGENT_HEARTBEAT_INTERVAL=30
TASK_TIMEOUT=300

# Security settings (generate secure values for production)
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development settings
DEBUG=false
DEVELOPMENT_MODE=false